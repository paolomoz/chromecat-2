{
  "name": "chromecat-visual-compare-workers",
  "version": "1.0.0",
  "description": "Cloudflare Workers for visual comparison tool",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 execute chromecat-db --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute chromecat-db --local --file=./schema.sql",
    "r2:create": "wrangler r2 bucket create chromecat-screenshots",
    "kv:create": "wrangler kv:namespace create KV",
    "d1:create": "wrangler d1 create chromecat-db"
  },
  "dependencies": {
    "@cloudflare/puppeteer": "^1.0.4",
    "hono": "^4.0.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^6.0.0",
    "upng-js": "^2.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/node": "^25.0.3",
    "@types/pngjs": "^6.0.5",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.24.0"
  }
}
